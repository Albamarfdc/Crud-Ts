<div class="row">
{{#each tasks}}
<div class="col-md-3
">
{{!-- todas las cards con el mismo tama√±o y que se adapten a la caja --}}
    <div class="card card-body mt-2">
        
        <div class="card-header">
            <h3 >{{title}}</h3>
            <p >{{description}}</p>
        </div>
        <div class="card-footer">
            <a href="/tasks/delete/{{_id}}" class="btn btn-danger">Delete</a>
            <a href="/tasks/edit/{{_id}}" class="btn btn-secondary">Edit</a>

    </div>
</div>

</div>
{{/each}}